{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"plugins": ["json-files"],
	"parserOptions": {
		"ecmaVersion": 2020
	},
	"rules": {
		"json-files/sort-package-json": 2,
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"]
	}
}
