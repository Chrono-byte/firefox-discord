{
	"name": "fd-rpc",
	"version": "2.0.4",
	"description": "Firefox Discord RPC",
	"keywords": [],
	"repository": {
		"type": "git",
		"url": "https://github.com/Chronomly/firefox-discord"
	},
	"license": "GPL-3.0",
	"author": "Chronomly",
	"main": "main.js",
	"scripts": {
		"dist": "electron-builder",
		"lint": "eslint . --ext js,json",
		"lint:fix": "eslint . --ext js,json --fix",
		"pack": "electron-builder --dir",
		"start": "electron ."
	},
	"dependencies": {
		"discord-rpc": "^3.0.0-beta.6",
		"express": "^4.16.2",
		"register-scheme": "github:devsnek/node-register-scheme"
	},
	"devDependencies": {
		"electron": "^6.0.10",
		"electron-builder": "^22.3.2",
		"eslint": "^6.8.0",
		"eslint-plugin-json-files": "^0.8.0"
	},
	"build": {
		"appId": "org.disilla.fd-rpc",
		"linux": {
			"target": "rpm",
			"maintainer": "chronomly@gmail.com",
			"category": "Utility"
		},
		"win": {
			"target": "msi"
		},
		"files": [
			"**/*",
			"!addon/**/*",
			"!.clang-format",
			"!README.md"
		]
	}
}
